<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.whgc.mapper.ReviewMapper">
	    <insert id="add" parameterType="Review" >
	        insert into Review_ ( name ) values (#{name})    
	    </insert>
	    
	    <delete id="delete" parameterType="Review" >
	        delete from Review_ where id= #{id}   
	    </delete>
	    
	    <select id="get" parameterType="_int" resultType="Review">
	        select * from   Review_  where id= #{id}    
	    </select>

	    <update id="update" parameterType="Review" >
	        update Review_ set name=#{name} where id=#{id}    
	    </update>
	    <select id="list" resultType="Review">
	        select * from   Review_      
	    </select>
	    
	     <select id="getByPid" parameterType="_int" resultType="Review">
	        select * from   Review_    where pid= #{pid}     
	    </select>
	    	     <select id="listByPage" parameterType="_int" resultType="Review">
	        select * from   Review_  limit #{0} , #{1}  
	    </select>
	    
	    <select id="getTotal"  resultType="int">
	        select count(*) from Review_
	    </select>
	</mapper>