<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.whgc.mapper.PaperMapper">
	    <insert id="add" parameterType="Paper" >
	        insert into Paper_  values (#{id},#{uid},#{cid},#{title},#{description},#{updateTime},#{wordSum},#{content})   
	    </insert>
	    
	    <delete id="delete" parameterType="Paper" >
	        delete from Paper_ where id= #{id}   
	    </delete>
	    
	    <select id="get" parameterType="_int" resultType="Paper">
	        select * from   Paper_  where id= #{id}    
	    </select>

	    <update id="update" parameterType="Paper" >
	        update Paper_ set name=#{name} where id=#{id}    
	    </update>
	    <select id="list" resultType="Paper">
	        select * from   Paper_      
	    </select>
	      <select id="listByPage" parameterType="_int" resultType="Paper">
	        select * from   Paper_  limit #{0} , #{1}  
	    </select>
	    
	    <select id="getTotal"  resultType="int">
	        select count(*) from Paper_
	    </select>
	    
	      <select id="getIdByName"  parameterType="string" resultType="int">
	        select id from Paper_ where title=#{name}
	    </select>
	</mapper>