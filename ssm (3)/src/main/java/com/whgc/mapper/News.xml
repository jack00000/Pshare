<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.whgc.mapper.NewsMapper">
	    <insert id="add" parameterType="News" >
	        insert into News_ ( name ) values (#{name})    
	    </insert>
	    
	    <delete id="delete" parameterType="News" >
	        delete from News_ where id= #{id}   
	    </delete>
	    
	    <select id="get" parameterType="_int" resultType="News">
	        select * from   News_  where id= #{id}    
	    </select>

	    <update id="update" parameterType="News" >
	        update News_ set name=#{name} where id=#{id}    
	    </update>
	    <select id="list" resultType="News">
	        select * from   News_      
	    </select>
	</mapper>

