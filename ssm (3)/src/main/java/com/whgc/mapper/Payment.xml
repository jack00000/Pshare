<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.whgc.mapper.PaymentMapper">
	    <insert id="add" parameterType="Payment" >
	        insert into Payment_ ( name ) values (#{name})    
	    </insert>
	    
	    <delete id="delete" parameterType="Payment" >
	        delete from Payment_ where id= #{id}   
	    </delete>
	    
	    <select id="get" parameterType="_int" resultType="Payment">
	        select * from   Payment_  where id= #{id}    
	    </select>

	    <update id="update" parameterType="Payment" >
	        update Payment_ set name=#{name} where id=#{id}    
	    </update>
	    <select id="list" resultType="Payment">
	        select * from   Payment_      
	    </select>
	</mapper>